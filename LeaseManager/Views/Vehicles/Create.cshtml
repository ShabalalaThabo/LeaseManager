@model LeaseManager.Models.Vehicle

@{
    ViewBag.Title = "Vehicles";
}

<h2 class="title text-center">@ViewBag.Title</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-md-6">
            <table class="table">
                <tr>
                    <th>@Html.LabelFor(model => model.Make)</th>
                    <td>
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-pencil"></i>
                            </div>
                            @Html.TextBoxFor(m => m.Make, new { @class = "form-control", @placeholder = "Make" })
                        </div>
                        @Html.ValidationMessageFor(m => m.Make, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <th>@Html.LabelFor(model => model.Model)</th>
                    <td>
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-pencil"></i>
                            </div>
                            @Html.TextBoxFor(m => m.Model, new { @class = "form-control", @placeholder = "Model" })
                        </div>
                        @Html.ValidationMessageFor(m => m.Model, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <th>@Html.LabelFor(model => model.Year)</th>
                    <td>
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-pencil"></i>
                            </div>
                            @Html.TextBoxFor(m => m.Year, new { @class = "form-control", @placeholder = "Year" })
                        </div>
                        @Html.ValidationMessageFor(m => m.Year, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <th>@Html.LabelFor(model => model.VIN)</th>
                    <td>
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-pencil"></i>
                            </div>
                            @Html.TextBoxFor(m => m.VIN, new { @class = "form-control", @placeholder = "VIN" })
                        </div>
                        @Html.ValidationMessageFor(m => m.VIN, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <th>@Html.LabelFor(model => model.Color)</th>
                    <td>
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-pencil"></i>
                            </div>
                            @Html.TextBoxFor(m => m.Color, new { @class = "form-control", @placeholder = "Color" })
                        </div>
                        @Html.ValidationMessageFor(m => m.Color, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <th>@Html.LabelFor(model => model.RegistrationDate)</th>
                    <td>
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-calendar-o"></i>
                            </div>
                            @Html.EditorFor(m => m.RegistrationDate, new { htmlAttributes = new { @type = "date", @class = "form-control", @required = "required", @placeholder = "Registration Date", min = DateTime.Now.ToString("yyyy-MM-dd") } })
                        </div>
                        @Html.ValidationMessageFor(m => m.RegistrationDate, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <th>Supplier</th>
                    <td>
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-user"></i>
                            </div>
                            @Html.DropDownList("SupplierId", null, "--- Please Select ---", new { @class = "form-control", @required = "required" })
                        </div>
                        @Html.ValidationMessageFor(model => model.SupplierId, "", new { @class = "text-danger" })
                    </td>
                </tr>
            </table>
            <div class="row text-center">
                <a class="btn btn-default" href="@Url.Action("Index","Vehicles")">
                    <i class="fa fa-angle-left"></i>
                    Back
                </a>
                <input type="submit" class="btn btn-default" value="Save" />
            </div>
        </div>
    </div>

}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
